<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="400" height="230">
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"
						  gap="15"
						  paddingTop="15" paddingLeft="15" paddingRight="15" paddingBottom="15"/>
	</s:layout>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup horizontalAlign="center" width="100%" height="100%">
		<mx:Form>
			<mx:FormItem label="Имя пользователя:">
				<s:TextInput id="login"/>
			</mx:FormItem>
			<mx:FormItem label="Пароль:">
				<s:TextInput displayAsPassword="true"/>
			</mx:FormItem>
		</mx:Form>
		<s:HGroup>
			<s:Button 
				id = "loginButton"  
				label="Войти"/>
			<s:Button id = "Registration" label = "Зарегистрироваться" />
		</s:HGroup>
	</s:VGroup>	
</s:Panel>
