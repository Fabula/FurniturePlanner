<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width = "400">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"
						  gap="15"
						  paddingTop="15" paddingLeft="15" paddingRight="15" paddingBottom="15"/>
	</s:layout>
	<s:VGroup horizontalAlign="center" width="100%" height="100%">
		<mx:Form>
			<mx:FormItem label="Имя:">
				<s:TextInput id="userName"/>
			</mx:FormItem>
			<mx:FormItem label="Фамилия:">
				<s:TextInput id="userSurName"/>
			</mx:FormItem>
			<mx:FormItem label="Эл. почта:">
				<s:TextInput id="userEmail"/>
			</mx:FormItem>
			<mx:FormItem label="Логин:">
				<s:TextInput id="userLogin"/>
			</mx:FormItem>
			<mx:FormItem label="Пароль:">
				<s:TextInput id="userPassword"/>
			</mx:FormItem>
			<mx:FormItem label="Повторите пароль:">
				<s:TextInput/>
			</mx:FormItem>
		</mx:Form>
		<s:HGroup>
			<s:Button id = "registration" label = "Создать" />
		</s:HGroup>
	</s:VGroup>	
</s:Panel>
