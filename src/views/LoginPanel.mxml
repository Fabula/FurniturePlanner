<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:parsley="http://www.spicefactory.org/parsley"
		 verticalCenter="0" horizontalCenter="0">
	<fx:Declarations>
		<parsley:Configure />
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import views.presentationmodel.LoginPanelPM;
			[Inject]
			[Bindable]
			public var _model:LoginPanelPM;
		]]>
	</fx:Script>
	<fx:Binding source="email.text" destination="_model.email" />
	<fx:Binding source="password.text" destination="_model.password"/>
	<s:controlBarContent>
		<s:HGroup width="100%"
				  horizontalAlign="right">
			<s:Button 
				id="loginButton"  
				label="Войти"
				enabled="{email.text &amp;&amp; password.text}"
				click="_model.authorize()"/>
			<s:Button 
				id="RegButton" 
				label="Регистрация учетной записи"
				click="_model.navigateToRegWindow()"/>
		</s:HGroup>
	</s:controlBarContent>
	<s:VGroup horizontalAlign="center" verticalAlign="middle"
			  width="100%" height="100%">
		<mx:Form>
			<mx:FormItem label="Адрес электронной почты:">
				<s:TextInput id="email" 
							 width="215" />
			</mx:FormItem>
			<mx:FormItem label="Пароль:">
				<s:TextInput id="password" 
							 width="215"
							 displayAsPassword="true"/>
			</mx:FormItem>
		</mx:Form>
	</s:VGroup>	
</s:Panel>
