<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:parsley="http://www.spicefactory.org/parsley"
		 title="Описание предмета мебели">
	<fx:Declarations>
		<parsley:Configure />
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import business.FurnitureProductView;
			
			import model.FurnitureProduct;
			
			import views.presentationmodel.FurnitureProductDescriptionPM;
			
			[Bindable]
			public var product:FurnitureProduct;
			
			[Inject]
			[Bindable]
			public var pm:FurnitureProductDescriptionPM;

			public function showFurnitureProductModel():void
			{
				furnitureProductModelArea.addChild(new FurnitureProductView(product, furnitureProductModelArea));
			}
			
		]]>
	</fx:Script>
	<s:controlBarContent>
		<s:HGroup width="100%"
				  horizontalAlign="right">
			<s:Button label="Добавить в квартиру"
					  click = "{pm.addFurnitureProductToRoom(product)}"/>
			<s:Button label="Закрыть"
					  click="{dispatchEvent(new Event(Event.CLOSE))}"/>
		</s:HGroup>
	</s:controlBarContent>
	<s:VGroup width="100%" height="100%" 
			   paddingTop="10" paddingRight="10" paddingBottom="10" paddingLeft="10"
			   gap="30">
		<s:HGroup width="100%" height="100%">
			<s:VGroup width="50%" height="100%" gap="10">
				<s:Label text="Завод-производитель: "
						 fontWeight="bold"/>
				<s:Label text="{product.manufacturerName}" />
				<s:Label text="Страна-производитель: " 
						 fontWeight="bold"/>
				<s:Label text="{product.manufacturerCountry}" />
				<s:Label text="Стиль: " 
						 fontWeight="bold"/>
				<s:Label text="{product.furnitureStyle}" />
				<s:Label text="Описание: " 
						 fontWeight="bold"/>
				<s:Label text="{product.description}"
						 width="100%" height="100%"/>
				<s:Label text="Размеры (высота x ширина x длина, мм):"
						 fontWeight="bold"/>
				<s:Label text="{product.furnitureModel.height + ' x ' + product.furnitureModel.width + ' x ' + product.furnitureModel.height}" />
			</s:VGroup>
			<s:SpriteVisualElement id="furnitureProductModelArea" 
									width="200" height="100%">	
			</s:SpriteVisualElement>
		</s:HGroup>
		<mx:HRule width="100%"/>
		<s:HGroup width="100%"
				  horizontalAlign="right">
			<s:Label text="Цена (евро): " />
			<s:Label text="{product.price}" />
		</s:HGroup>
	</s:VGroup>
</s:Panel>
