<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:parsley="http://www.spicefactory.org/parsley"
		 title="{mainAppModel.currentProject.projectName}"
		 resize="resizeHandler(event)">
	<fx:Declarations>
		<parsley:Configure />
	</fx:Declarations>
	<fx:Script>
		<![CDATA[						
			import business.Room3D;
			
			import model.PlannerModelLocator;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			
			import views.presentationmodel.ToolAreaPM;
			
			[Bindable]
			[Inject]
			public var _model:ToolAreaPM;
			
			[MessageHandler]
			public function addRoom(room:Room3D):void{
				drawArea.addChild(room);
			}
			
			public var mainAppModel:PlannerModelLocator = PlannerModelLocator.getInstance();
			

			private function resizeHandler(event:ResizeEvent):void
			{
				mainAppModel.toolAreaWidth = this.width;
				mainAppModel.toolAreaHeight = this.height;
			}

		]]>
	</fx:Script>
	<s:controlBarContent>
		<s:HGroup width="100%" height="100%"
				  paddingLeft="5" paddingTop="5" paddingBottom="5"
				  verticalAlign="middle">
			<mx:LinkButton icon="{_model.newProjectIcon}"
						   click="{mainAppModel.openNewProjectPopUp = true}"/>
			<mx:LinkButton icon="{_model.saveProjectIcon}" />
			<mx:LinkButton icon="{_model.printProjectIcon}" />
		</s:HGroup>
	</s:controlBarContent>
	<s:Group width="100%" height="100%">
		<s:SpriteVisualElement id="drawArea" 
							   width="100%" height="100%"/>
	</s:Group>
</s:Panel>
