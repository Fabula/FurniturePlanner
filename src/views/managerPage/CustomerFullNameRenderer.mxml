<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						  xmlns:s="library://ns.adobe.com/flex/spark" 
						  xmlns:mx="library://ns.adobe.com/flex/mx" 
						  focusEnabled="true">
	<s:Label x="10" y="5" text="{getCustomerDetailsOfOrder(data)}" />
	<fx:Script>
		<![CDATA[
			import model.PlannerModelLocator;
			import model.User;
			
			private var mainAppModel:PlannerModelLocator = PlannerModelLocator.getInstance();
			
			private function getCustomerDetailsOfOrder(data:Object):String{
				
				var customerFullName:String;
				
				for each (var customer:User in mainAppModel.customers){
					if (customer.id == data.orderUserID){
						customerFullName = customer.name + " " + customer.lastName;
					}
				}
				
				return customerFullName;
			}
			
		]]>
	</fx:Script>
</s:MXDataGridItemRenderer>
